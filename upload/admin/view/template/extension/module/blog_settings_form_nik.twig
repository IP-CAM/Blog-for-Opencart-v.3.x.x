{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-blog-settings" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_blog_settings_form }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-blog-settings" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-sort">{{ entry_sort }}</label>
                        <div class="col-sm-10">
                            <select name="sort" id="input-sort" class="form-control">
                                <option value="1" {% if sort == '1' %}selected{% endif %}>{{ text_sort_order }}</option>
                                <option value="2" {% if sort == '2' %}selected{% endif %}>{{ text_id }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order">{{ entry_order }}</label>
                        <div class="col-sm-10">
                            <select name="order" id="input-order" class="form-control">
                                {% if order %}
                                    <option value="0">{{ text_asc }}</option>
                                    <option value="1" selected>{{ text_desc }}</option>
                                {% else %}
                                    <option value="0" selected>{{ text_asc }}</option>
                                    <option value="1">{{ text_desc }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-limit-articles">{{ entry_limit_articles }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="limit_articles" value="{{ limit_articles }}" placeholder="{{ entry_limit_articles }}" id="input-limit-articles" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-limit-related-articles">{{ entry_limit_related_articles }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="limit_related_articles" value="{{ limit_related_articles }}" placeholder="{{ entry_limit_related_articles }}" id="input-limit-related-articles" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order">{{ entry_show_tags }}</label>
                        <div class="col-sm-10">
                            <select name="show_tags" id="input-order" class="form-control">
                                {% if show_tags %}
                                    <option value="0">{{ text_no }}</option>
                                    <option value="1" selected>{{ text_yes }}</option>
                                {% else %}
                                    <option value="0" selected>{{ text_no }}</option>
                                    <option value="1">{{ text_yes }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}